<% layout("layouts/boilerplate") %>
<div class="container my-5">
  <!-- Filter Icons -->
  <div id="filters">
    <div class="filter">
      <a href="/listings?category=trending" class="filter-link">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </a>
    </div>
    <div class="filter">
      <a href="/listings?category=rooms" class="filter-link">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </a>
    </div>
    <div class="filter">
      <a href="/listings?category=iconic" class="filter-link">
        <div><i class="fa-solid fa-city"></i></div>
        <p>Iconic Cities</p>
      </a>
    </div>
    <div class="filter">
      <a href="/listings?category=mountains" class="filter-link">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains</p>
      </a>
    </div>
    <div class="filter">
      <a href="/listings?category=castles" class="filter-link">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
      </a>
    </div>
    <div class="filter">
      <a href="/listings?category=pools" class="filter-link">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing Pools</p>
      </a>
    </div>
    <div class="filter">
      <a href="/listings?category=camping" class="filter-link">
        <div><i class="fa-solid fa-tents"></i></div>
        <p>Camping</p>
      </a>
    </div>
    <div class="filter">
      <a href="/listings?category=farms" class="filter-link">
        <div><i class="fa-solid fa-tractor"></i></div>
        <p>Farms</p>
      </a>
    </div>
    <div class="filter">
      <a href="/listings?category=arctic" class="filter-link">
        <div><i class="fa-solid fa-snowflake"></i></div>
        <p>Arctic</p>
      </a>
    </div>
  </div>

  <!-- Tax toggle -->
  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
      <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
    </div>
  </div>

  <!-- Listings Grid -->
   <% if (allListings.length === 0) { %>
  <div class="alert alert-warning text-center mt-4">
    No listings found for your search.
  </div>
<% } %>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-1 g-4 mt-3">
    <% for(let listing of allListings) { %>
      <div class="col">
        <a href="/listings/<%= listing._id %>" class="listing-link">
          <div class="card listing-card h-100">
            <img 
              src="<%= listing.image.url %>" 
              class="card-img-top" 
              alt="listing_image"
            >
            <div class="card-body">
              <p class="card-text mb-1"><b><%= listing.title %></b></p>
              <p class="card-text text-muted">&#8377;<%= listing.price.toLocaleString("en-IN") %>/night</p>
              <i class="tax-info"> &nbsp; &nbsp;+18% GST</i>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>
</div>

<script>
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (let info of taxInfo) {
      info.style.display = (info.style.display !== "inline") ? "inline" : "none";
    }
  });
</script>
