<% layout("layouts/boilerplate") %>
<!-- Extending the main layout for consistent styling -->

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <!-- Page Heading -->
      <h3 class="mb-4"><%= listing.title %></h3>

      <!-- Listing card -->
      <div class="card show-card listing-card">
        <img 
          src="<%= listing.image %>" 
          class="card-img-top show-img" 
          alt="listing_image" 
        />
        <div class="card-body">
          <p class="card-text mb-2">
            <%= listing.description %> <br>
            <span class="text-success">
              &#8377;<%= listing.price.toLocaleString("en-IN") %>
            </span> <br>
            <%= listing.location %>, <%= listing.country %><br>
          </p>
        </div>
      </div>

      <!-- Edit and Delete buttons -->
      <div class="d-flex justify-content-start gap-3 mt-3 mb-5">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn">Edit</a>
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
          <button class="btn btn-outline-danger">Delete</button>
        </form>
      </div>

      <hr>

      <!-- Leave a Review Form -->
      <div class="mb-4 mt-4">
        <h4>Leave a Review</h4> 
        <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
          <div class="mb-3 mt-3">
            <label for="rating" class="form-label">Rating</label>
            <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range" >
          </div>
          <div class="mb-3 mt-3">
            <label for="comment" class="form-label">Comments</label>
            <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
            <div class="invalid-feedback">Please add some comments for reviews</div>
          </div>
          <button class="btn btn-outline-dark">Submit</button>
        </form>
      </div>

      <hr>

      <!-- All Reviews Section -->
      <h4 class="mb-3">All Reviews</h4>
      <div class="row">
        <% for (review of listing.reviews) { %>
          <div class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm border-0 rounded-4 p-3">
              <div class="card-body">
                <h6 class="card-title fw-bold">Jane Doe</h6>
                <p class="card-text text-muted mb-1"><%= review.comment %></p>
                <p class="card-text">
                  <span class="text-warning">&#x22C6;</span> <%= review.rating %> / 5
                </p>
              </div>
              <form class="mb-3" method="POST" action="/listings/<%=listing._id%>/reviews/<%= review._id%>?_method=DELETE" >
                <button class="btn btn-dark btn-sm">delete</button>
              </form>
            </div>
          </div>
        <% } %>
      </div>

    </div>
  </div>
</div>
